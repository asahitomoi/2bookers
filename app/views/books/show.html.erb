<div class="container">
	<div class="row">

<%= render 'users/error_messages', book:@books %>

<%= render 'users/sidebar', user: @user, book: @books %>

<div class="col-lg-8">


<h1>Book detail</h1>

<table class="table table-striped">

  <tr>
  	<td><%=@book.user.name %></td>
    <td><%= @book.title %></td>
    <td><%= @book.opinion %></td>
    	<% if @book.user == current_user %>
      <td><%= link_to"Edit", edit_book_path(@book.id), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
      <td><%= link_to "Destroy.", book_path(@book.id), class: "btn-sm btn-danger destroy_book_#{@book.id}", method: :delete, "data-confirm" => "Are you sure?" %></td>
      <% end %>
  </tr>

</table>


</div>
</div>
</div>