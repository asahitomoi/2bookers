<!DOCTYPE html>
<html>
  <head>

    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <div id="slidemenu">
  <ul class="nav navbar-nav navbar-right" data-hover="dropdown">
    <% if user_signed_in? %>

      <%= link_to user_path(current_user.id), class: "home" do %>
    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home
<% end %>

      <%= link_to users_path, class: "users" do %>
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>Users
<% end %>

      <%= link_to books_path, class: "books" do %>
    <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Books
<% end %>

      <%= link_to destroy_user_session_path, method: :delete, class: "logout" do %>
    <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>logout
<% end %>


    <% else %>
      <li>
        <%= link_to root_path, class:"home"  do %>
    <span class="glyphicon glyphicon-home" aria-hidden="true"></span>Home
<% end %>
      </li>


      <li>
         <%= link_to home_about_path, class:"about" do %>
    <span class="glyphicon glyphicon-link" aria-hidden="true"></span>about
<% end %>


      </li>

       <li>
        <%= link_to new_user_registration_path, class:"sign_up" do %>
    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>sign up
        <% end %>
      </li>

      <li>
        <%= link_to new_user_session_path, class:"sign_in" do %>
    <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>log in
        <% end %>
      </li>

    <% end %>
  </ul>
</div>

</head>




  <body>
    <%= yield %>
  </body>
</html>
