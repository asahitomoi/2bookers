<div class="container">
	<div class="row">

<%= render 'users/sidebar', user: @user %>



<div class="col-lg-8">


<h1>Books</h1>

<table class="table table-striped">

 
 <tr>
 	<th>&nbsp;</th>
 	<th>title</th>
 	<th>opinion</th>
 </tr>
 <% @book.each do |books| %>
  <tr>
  	<td><%= attachment_image_tag @user,:image, :fill, 60, 60, fallback: "no_image.jpg" ,class: "" %></td>
    <td><%= link_to book_path(books.id), class:"book_#{books.id}" do %>
    	<%= books.title %>
    	<% end %>
    </td>
    <td><%= books.opinion %></td>


  </tr>


 <% end %>

  </table>
</div>
   </div>
</div>