<h1>User info</h1>

<%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
        <label class="">Name</label>
        <%= f.text_field :name, autofocus: true,  id:"inputEmail",placeholder:"name",class:"name"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
</div>


<div class="form-group has-icon">
    <div class="user-edit-image">
        <%= attachment_image_tag @user, :image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: ""%>
    </div>
    <label class="control-label sr-only" for="inputEmail">Image</label>
    <%= f.attachment_field :image, placeholder: "プロフィール画像", class: "user-edit-form user_image" %>
</div>



       <label class="">Introduction</label>
       <%= f.text_area :introduction, autofocus:true,placeholder:"introduction", class:"name"%>
<div>
    <%= f.submit "Update User", class:"btn btn-default" %>
</div>
<% end %>