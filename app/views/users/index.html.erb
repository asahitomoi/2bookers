
<div class="container">
	<div class="row">


<%= render 'users/sidebar', user: @user %>



<div class="col-lg-8">


<h1>Users</h1>

<table class="table table-striped">


 <tr>
 	<th>image</th>
 	<th>name</th>
 	<th>&nbsp;</th>
 </tr>
 <% @users.each do |users| %>

  <tr>
  	<td><%= attachment_image_tag users, :image , :fill, 60, 60, fallback: "no_image.jpg", class: "" %></td>
    <td><%= users.name %></td>
    <td><%= link_to 'Show', user_path(users.id), class:"user_#{@user.id}"%></td>

  </tr>


 <% end %>

  </table>
</div>