
<div class="container">
	<div class="row">

<%= render 'users/error_messages', book:@books %>
<%= render 'users/sidebar', user: @user ,book: @books %>



<div class="col-lg-8">


<h1>Users</h1>

<table class="table table-striped">


 <tr>
 	<th>image</th>
 	<th>name</th>
 	<th>&nbsp;</th>
 </tr>
 <% @users.each do |users| %>

  <tr>
  	<td><%= attachment_image_tag users, :image , :fill, 60, 60, fallback: "no_image.jpg", class: "" %></td>
    <td><%= users.name %></td>
    <td class="user_#{users.id}"><%= link_to 'Show', user_path(users.id)%></td>

  </tr>


 <% end %>

  </table>
</div>