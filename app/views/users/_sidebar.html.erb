<div class="col-lg-4">

 <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
 <% end %>

<h1>User info</h1>

<div class="form-group has-icon">

        <%= attachment_image_tag user, :image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
    </div>

<table class="table table-striped">
 <tr>
 	<td><p>name</p></td>
 	<td><%= user.name %></td>

 </tr>
  <tr>
  	<td><p>introduction</p></td>
    <td><%= user.introduction %></td>
  </tr>


  </table>


<%= link_to  edit_user_path(user.id), class: "btn btn-primary btn-block edit_user_#{user.id}" do %><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
<% end %>

<%= form_for(book) do |f| %>
 <div>
 <label>title</label><br>
 <%= f.text_field :title, class:"col-xs-12 book_title" %>
</div>
<div>
 <label>opinion</label><br>
 <%= f.text_area :opinion, class:"col-xs-12 book_body" %>
</div>
  <%= f.submit "Create Book", class:"btn btn-primary btn-block" %>
<% end %>

</div>